<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:id="@+id/viewRootDialog"
    android:theme="@style/Theme.AppCompat.Dialog"
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ClientConfirmare">
    <TextView
        android:textColor="#FFFFFF"
        android:text="Soferul poate ajunge in cel putin x minute"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        />
    <Button
        android:background="@drawable/dialogbutton"
        android:id="@+id/clientAccepta"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCEPT"
        />

    <Button
        android:background="@drawable/dialogbutton"
        android:id="@+id/clientRefuza"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REFUZ"
        />

</LinearLayout>